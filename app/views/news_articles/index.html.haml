- title "Latest Provincial Election News"
- breadcrumb('latest news', request.fullpath)

.flow_it
  .two_columns.latest_news_large
    %h3 Latest News Articles
    %div.grey.small
      :markdown
        News articles are automatically gathered from [Google News](http://news.google.ca) by searching for the full names of the candidates in the upcoming Manitoba election.
    %br
    = render 'news_articles', :news_articles => @news_by_date
    %br
    = paginate @news_articles
  .one_column
    %h3 Manitoba Election Tweets
    <script src="http://widgets.twimg.com/j/2/widget.js"></script>
    <script>
    new TWTR.Widget({
    version: 2,
    type: 'search',
    search: '#mbvotes',
    interval: 30000,
    title: 'Tweets Hash-Tagged With',
    subject: '#mbvotes',
    width: 'auto',
    height: 1400,
    theme: {
    shell: {
    background: '#eeeeee',
    color: '#333333'
    },
    tweets: {
    background: '#eeeeee',
    color: '#444444',
    links: '#3b59bb'
    }
    },
    features: {
    scrollbar: true,
    loop: false,
    live: true,
    hashtags: false,
    timestamp: true,
    avatars: true,
    toptweets: false,
    behavior: 'all'
    }
    }).render().start();
    </script>    

