- title "Select Your Constituency", false

%div.flow_it
  %div.three_columns
    %h2 Select Your Constituency Within Your Region
    %ul
      - @regions.each do |region|
        %li= link_to region, '#'+region.parameterize
  %div.one_column
    %a{ :name => @regions[0].parameterize}
    %h3= @regions[0] + ' Constituencies'
    %ul
      - @constituencies_by_region[@regions[0]].each do |constituency| 
        %li= link_to constituency.name, constituency.friendly_path
  %div.one_column
    - @regions[1..3].each do |region|
      %a{ :name => region.parameterize}
      %h3= region + ' Constituencies'
      %ul
        - @constituencies_by_region[region].each do |constituency| 
          %li= link_to constituency.name, constituency.friendly_path
